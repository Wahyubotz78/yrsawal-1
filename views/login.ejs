<body>
    <% if(message.success){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success! </strong>
            <%= message.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } else if(message.error){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error! </strong>
                <%= message.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
            <div class="container-fluid">
              <div class="row row-height">
                  <div class="col-lg-6 background-image p-0" data-background="url(img/main_bg.jpg)">
                      <div class="content-left-wrapper opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
                          <a href="#0" id="logo"><img src="/../assets/auth/img/favicon.jpg" alt="" width="46" height="40"></a>
                          <div id="social">
                              <ul>
                                  <li><a href="#0"><i class="social_facebook"></i></a></li>
                                  <li><a href="#0"><i class="social_twitter"></i></a></li>
                                  <li><a href="#0"><i class="social_instagram"></i></a></li>
                              </ul>
                          </div>
                          <!-- /social -->
                          <div>
                    <img src="/../assets/auth/img/logo.png" alt="" width="150" height="75">
                              <h1>Your Sawaal Authentication</h1>
                              <p>Hey! Welcome to the Your Sawaal Platform. Login to Explore our Wide Range of different community options.</p>
                            </div>
                      </div>
                  </div>
                  <div class="col-lg-6 d-flex flex-column content-right">
                      <div class="container my-auto py-5">
                          <div class="row">
                              <div class="col-lg-9 col-xl-7 mx-auto">
                                  <h4 class="mb-3">Login</h4>
                                  <form action="/user/login" method="post" class="form-group">
                                      <div class="form-group">
                                        <label for="email" class="form-label">Email address</label>
                                        <input type="email" class="form-control" name="email" id="email"
                                            aria-describedby="emailHelp">   
                                      </div>
                                      <div class="form-group">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" name="password" id="password">
                                    </div>
                            
                                      <button type="submit" class="btn_1 full-width">Login</button>
                                  </form>
                                <div class="row">
                                  <div class="col-sm-6"> 
                                    <div class="card social-block">
                                      <div class="card-body">
                                        <a class="btn btn-block btn-social btn-google" href="/user/auth/google" role="button">
                                          <i class="fab fa-google"></i>
                                          Sign In with Google
                                        </a>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-sm-6"> 
                                    <div class="card social-block">
                                      <div class="card-body">
                                        <a class="btn btn-block btn-social btn-google" href="/user/auth/facebook" role="button">
                                          <i class="fab fa-google"></i>
                                          Sign In with Facebook
                                        </a>
                                      </div>
                                    </div>
                                  </div> 
                                </div>
                                  <p class="text-center mt-3 mb-0">Don't have an account? <a href="/user/register">Sign Up</a></p>
                                  
                              </div>
                          </div>
                      </div>
                      <div class="container pb-3 copy">Â© Your Sawaal - All Rights Reserved.</div>
                  </div>
              </div>
              <!-- /row -->
          </div>
          <!-- /container -->
          
          <!-- COMMON SCRIPTS -->
            <script src="/../assets/auth/js/common_scripts.js"></script>
